# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# PostgreSQL Configuration
# Format: postgresql://[user[:password]@][host][:port][/database]
POSTGRES_CONNECTION=postgresql://localhost/mydb

# PostgreSQL Connection Details (Alternative to connection string)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DATABASE=mydb
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-password-here

# BIRD Benchmark Database (for validation)
BIRD_DB_CONNECTION=postgresql://bird_user@localhost/bird_dev

# Model Configuration
# Update to latest Claude model as needed
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Performance Thresholds (Model 1 Analyzer)
# Minimum rows to flag sequential scans
SEQ_SCAN_MIN_ROWS=10000

# Cost ratio to flag high-cost nodes (0.7 = 70% of total cost)
COST_SIGNIFICANCE_RATIO=0.7

# Estimate error ratio to flag planning issues
ESTIMATE_ERROR_RATIO=5.0

# Maximum rows for nested loop joins
NESTED_LOOP_MAX_ROWS=1000

# Validation Configuration
# Default constraints for query optimization
MAX_QUERY_COST=10000.0
MAX_QUERY_TIME_MS=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Configuration
DEBUG=false
TESTING=false
